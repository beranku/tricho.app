<div id="settingsModal" class="modal-overlay">
  <div class="modal-dialog">
    <div class="modal-header">
      <div class="modal-title">Nastavení</div>
      <button id="settingsCloseBtn" type="button" class="modal-close">✕</button>
    </div>
    <div class="modal-body">
      <!-- Session Settings -->
      <div class="settings-section">
        <div class="settings-section-title">Sezení</div>
        <div class="settings-row">
          <div class="settings-label">
            <div class="settings-label-text">Oddělení sezení</div>
            <div class="settings-label-hint">Pauza mezi snímky pro nové sezení</div>
          </div>
          <div class="settings-control">
            <input type="number" id="settingSessionGap" class="settings-input" min="1" max="60" value="10" />
            <span class="settings-unit">min</span>
          </div>
        </div>
      </div>

      <!-- Image Quality Settings -->
      <div class="settings-section">
        <div class="settings-section-title">Kvalita snímků</div>
        <div class="settings-row">
          <div class="settings-label">
            <div class="settings-label-text">Kvalita JPEG</div>
            <div class="settings-label-hint">Vyšší = lepší kvalita, větší soubor</div>
          </div>
          <div class="settings-control">
            <input type="number" id="settingJpegQuality" class="settings-input" min="50" max="100" step="5" value="80" />
            <span class="settings-unit">%</span>
          </div>
        </div>
        <div class="settings-row">
          <div class="settings-label">
            <div class="settings-label-text">Max. rozlišení</div>
            <div class="settings-label-hint">Větší snímky zabírají více místa</div>
          </div>
          <div class="settings-control">
            <select id="settingResolution" class="settings-select">
              <option value="1280">HD (1280px)</option>
              <option value="1920" selected>Full HD (1920px)</option>
              <option value="2560">QHD (2560px)</option>
              <option value="3840">4K (3840px)</option>
            </select>
          </div>
        </div>
      </div>

      <!-- Storage Settings -->
      <div class="settings-section">
        <div class="settings-section-title">Úložiště</div>
        <div class="settings-row">
          <div class="settings-label">
            <div class="settings-label-text">Max. počet snímků</div>
            <div class="settings-label-hint">Starší snímky budou automaticky smazány</div>
          </div>
          <div class="settings-control">
            <input type="number" id="settingMaxPhotos" class="settings-input" min="100" max="5000" step="100" value="1000" />
          </div>
        </div>
        <div class="settings-row">
          <div class="settings-label">
            <div class="settings-label-text">Max. velikost úložiště</div>
            <div class="settings-label-hint">Limit pro automatické mazání</div>
          </div>
          <div class="settings-control">
            <input type="number" id="settingMaxStorage" class="settings-input" min="100" max="2000" step="50" value="500" />
            <span class="settings-unit">MB</span>
          </div>
        </div>
      </div>

      <!-- Camera Settings -->
      <div class="settings-section">
        <div class="settings-section-title">Kamera</div>
        <div class="settings-row">
          <div class="settings-label">
            <div class="settings-label-text">Výchozí kamera</div>
            <div class="settings-label-hint">Která kamera se použije při startu</div>
          </div>
          <div class="settings-control">
            <select id="settingDefaultCamera" class="settings-select">
              <option value="environment">Zadní</option>
              <option value="user">Přední</option>
            </select>
          </div>
        </div>
        <div class="settings-row">
          <div class="settings-label">
            <div class="settings-label-text">Auto-restart kamery</div>
            <div class="settings-label-hint">Obnovit kameru po návratu do aplikace</div>
          </div>
          <div class="settings-control">
            <div id="settingAutoRestart" class="toggle active">
              <div class="toggle-knob"></div>
            </div>
          </div>
        </div>
      </div>

      <!-- Other Settings -->
      <div class="settings-section">
        <div class="settings-section-title">Ostatní</div>
        <div class="settings-row">
          <div class="settings-label">
            <div class="settings-label-text">Potvrdit mazání</div>
            <div class="settings-label-hint">Ptát se před smazáním snímku</div>
          </div>
          <div class="settings-control">
            <div id="settingConfirmDelete" class="toggle">
              <div class="toggle-knob"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="modal-footer">
      <button id="settingsResetBtn" type="button" class="btn btn-ghost btn-sm">Výchozí</button>
      <button id="settingsSaveBtn" type="button" class="btn btn-sm">Uložit</button>
    </div>
  </div>
</div>
